#!/bin/bash

export DESKTOP_CORE_NAME="{{.DESKTOP_NAME}}"
export DESKTOP_CORE_BIN_NAME="$DESKTOP_CORE_NAME"
export DESKTOP_CORE_VERSION=v2.1.7
export DESKTOP_CORE_ORG="9seconds"

export DESKTOP_CORE_ORG_DOREAMON_DESIGN="doreamon-design"
export DESKTOP_CORE_VERSION_DOREAMON_DESIGN=v2.1-1.2.0

if [ "$PLUGIN_DESKTOP_USE_DOREAMON_DESIGN" = "true" ]; then
  export DESKTOP_CORE_ORG=$DESKTOP_CORE_ORG_DOREAMON_DESIGN
  export DESKTOP_CORE_VERSION=$DESKTOP_CORE_VERSION_DOREAMON_DESIGN
fi

export DESKTOP_CORE_RELEASE_DOWNLOAD="https://github.com/${DESKTOP_CORE_ORG}/{{.DESKTOP_NAME}}/releases/download"
